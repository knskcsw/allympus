generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Attendance {
  id           String    @id @default(cuid())
  date         DateTime
  clockIn      DateTime?
  clockOut     DateTime?
  breakMinutes Int       @default(0)
  note         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([date])
  @@map("attendances")
}

model Project {
  id           String   @id @default(cuid())
  code         String   @unique
  name         String
  abbreviation String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  wbsList          Wbs[]
  timeEntries      TimeEntry[]
  projectWorkHours ProjectWorkHours[]

  @@map("projects")
}

model Wbs {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  timeEntries TimeEntry[]

  @@map("wbs")
}

model DailyTask {
  id               String      @id @default(cuid())
  date             DateTime
  title            String
  description      String?
  status           String      @default("TODO")
  priority         String      @default("MEDIUM")
  estimatedMinutes Int?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  timeEntries TimeEntry[]

  @@index([date])
  @@index([status])
  @@map("daily_tasks")
}

model TimeEntry {
  id          String      @id @default(cuid())
  dailyTaskId String?
  dailyTask   DailyTask?  @relation(fields: [dailyTaskId], references: [id], onDelete: SetNull)
  projectId   String?
  project     Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)
  wbsId       String?
  wbs         Wbs?        @relation(fields: [wbsId], references: [id], onDelete: SetNull)
  startTime   DateTime
  endTime     DateTime?
  duration    Int?
  note        String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("time_entries")
}

model ProjectWorkHours {
  id             String   @id @default(cuid())
  projectId      String
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fiscalYear     String
  month          Int
  estimatedHours Float    @default(0)
  actualHours    Float    @default(0)
  overtimeHours  Float    @default(0)
  workingDays    Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([projectId, fiscalYear, month])
  @@map("project_work_hours")
}

model Vacation {
  id        String   @id @default(cuid())
  date      DateTime
  type      String
  hours     Float
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date])
  @@map("vacations")
}

model Holiday {
  id         String   @id @default(cuid())
  date       DateTime
  name       String
  type       String
  fiscalYear String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([date])
  @@map("holidays")
}
