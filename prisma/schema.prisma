generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum WorkType {
  IN_PROGRESS
  SE_TRANSFER
  INDIRECT
}

model Attendance {
  id           String    @id @default(cuid())
  date         DateTime
  clockIn      DateTime?
  clockOut     DateTime?
  breakMinutes Int       @default(0)
  workMode     String?
  sleepHours   Float?
  note         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([date])
  @@map("attendances")
}

model MorningRoutineItem {
  id        String   @id @default(cuid())
  date      DateTime
  title     String
  completed Boolean  @default(false)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@map("morning_routine_items")
}

model MorningRoutineTemplateItem {
  id        String   @id @default(cuid())
  title     String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("morning_routine_template_items")
}

model Project {
  id           String    @id @default(cuid())
  code         String    @unique
  name         String
  abbreviation String?
  workType     WorkType  @default(IN_PROGRESS)
  isActive     Boolean   @default(true)
  member       String?
  startDate    DateTime?
  endDate      DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  wbsList          Wbs[]
  timeEntries      TimeEntry[]
  projectWorkHours ProjectWorkHours[]
  evmFixedTasks    EvmFixedTask[]

  @@index([isActive])
  @@map("projects")
}

model Wbs {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name      String
  wbsNo     String?
  wbsClass  String?
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  timeEntries TimeEntry[]

  @@index([projectId, sortOrder])
  @@map("wbs")
}

model DailyTask {
  id               String      @id @default(cuid())
  date             DateTime
  title            String
  description      String?
  status           String      @default("TODO")
  priority         String      @default("MEDIUM")
  estimatedMinutes Int?
  sortOrder        Int         @default(0)
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  timeEntries TimeEntry[]

  @@index([date])
  @@index([status])
  @@map("daily_tasks")
}

model RoutineTask {
  id          String      @id @default(cuid())
  title       String
  description String?
  sortOrder   Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  timeEntries TimeEntry[]

  @@index([sortOrder])
  @@map("routine_tasks")
}

model EvmFixedTask {
  id               String   @id @default(cuid())
  date             DateTime
  projectId        String
  project          Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title            String
  estimatedMinutes Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([date])
  @@index([projectId])
  @@map("evm_fixed_tasks")
}

model TimeEntry {
  id          String      @id @default(cuid())
  dailyTaskId String?
  dailyTask   DailyTask?  @relation(fields: [dailyTaskId], references: [id], onDelete: SetNull)
  routineTaskId String?
  routineTask RoutineTask? @relation(fields: [routineTaskId], references: [id], onDelete: SetNull)
  projectId   String?
  project     Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)
  wbsId       String?
  wbs         Wbs?        @relation(fields: [wbsId], references: [id], onDelete: SetNull)
  startTime   DateTime
  endTime     DateTime?
  duration    Int?
  note        String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("time_entries")
}

model ProjectWorkHours {
  id             String   @id @default(cuid())
  projectId      String
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fiscalYear     String
  month          Int
  estimatedHours Float    @default(0)
  actualHours    Float    @default(0)
  overtimeHours  Float    @default(0)
  workingDays    Int      @default(0)
  vacationHours  Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([projectId, fiscalYear, month])
  @@map("project_work_hours")
}

model Vacation {
  id        String   @id @default(cuid())
  date      DateTime
  type      String
  hours     Float
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date])
  @@map("vacations")
}

model Holiday {
  id         String   @id @default(cuid())
  date       DateTime
  name       String
  type       String
  fiscalYear String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([date])
  @@map("holidays")
}

model MonthlyVacationHours {
  id         String   @id @default(cuid())
  fiscalYear String
  month      Int
  hours      Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([fiscalYear, month])
  @@map("monthly_vacation_hours")
}

model SalaryRecord {
  id                  String   @id @default(cuid())
  year                Int
  month               Int
  gross               Int      @default(0)
  net                 Int      @default(0)
  healthInsurance     Int      @default(0)
  pension             Int      @default(0)
  employmentInsurance Int      @default(0)
  incomeTax           Int      @default(0)
  residentTax         Int      @default(0)
  otherDeductions     Int      @default(0)
  bonus               Int      @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([year, month])
  @@map("salary_records")
}
